    .container
        section.conditions
            .conditions__tabs
                ul.tabs
                    li.tabs__item
                        button.tabs__btn.device-btn(type="button") Доставка

                    li.tabs__item
                        button.tabs__btn.device-btn(type="button") Гарантия

